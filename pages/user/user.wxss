/* pages/user/user.wxss */
page {
  background-color: #fff;
}
/* 顶部 */
.user-info {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 50rpx 0;
  background-color: #efc743;
  color: #fff;
}

.user-info .user-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-left: 40rpx;
}

.user-info .user-name {
  margin-left: 40rpx;
  font-size: 34rpx;
}

.user-info .getUserInfo {
  position: absolute;
  top: 60rpx;
  left: 90rpx;
  width: 400rpx;
  height: 80rpx;
  opacity: 0;
}

/* 菜单 */
.menu-wrap {
  padding: 0 20rpx;
}

.menu-wrap .menu-list {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 20rpx;
  color: #333;
  border-bottom: 2rpx solid #e1e1e1;
  font-size: 30rpx;
  font-weight: bold !important;
  background-color: #fff;
  font-weight: normal;
}

.menu-wrap .menu-list image {
  width: 32rpx;
  height: 32rpx;
}

.menu-wrap .menu-list .contact {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
