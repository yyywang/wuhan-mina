/**app.wxss**/
@import 'colorui/main.wxss';
@import 'colorui/icon.wxss';

/* 海报 */
canvas {
  width: 600rpx;
  height: 900rpx;
  position: absolute;
  left: -1000rpx;
}

.posterImg-wrap {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 600rpx;
  height: 900rpx;
  transform: translate(-50%, -50%);
  z-index: 98;
}

.posterImg {
  width: 600rpx;
  height: 900rpx;
}

.posterImg-wrap .poster-title {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
}
